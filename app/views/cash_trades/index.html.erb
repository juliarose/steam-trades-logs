<p id="notice"><%= notice %></p>

<h1>Cash Trades</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Steam ID</th>
      <th>Keys</th>
      <th>USD</th>
      <th>Processor</th>
      <th>Steam Trade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cash_trades.each do |cash_trade| %>
      <tr>
        <td><%= cash_trade.date %></td>
        <td><%= cash_trade.steamid %></td>
        <td><%= cash_trade.keys %></td>
        <td><%= humanized_money_with_symbol cash_trade.usd_money %></td>
        <td><%= cash_trade.processor.name %></td>
        <td><%= link_to cash_trade.steam_trade.id, steam_trade_path(cash_trade.steam_trade) if cash_trade.steam_trade %></td>
        <td><%= link_to 'Show', cash_trade %></td>
        <td><%= link_to 'Edit', edit_cash_trade_path(cash_trade) %></td>
        <td><%= link_to 'Destroy', cash_trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cash Trade', new_cash_trade_path %>
